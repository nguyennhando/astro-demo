  <!-- GIỎ HÀNG BẤT TỬ – HOÀN CHỈNH -->
  <script>
    let cart = [];

    function loadCart() {
      const saved = localStorage.getItem("cart");
      if (saved) {
        try { cart = JSON.parse(saved); } catch (e) { cart = []; }
      }
      renderCart();
      updateCheckoutButton();
    }

    function saveCart() {
      localStorage.setItem("cart", JSON.stringify(cart));
      renderCart();
      updateCheckoutButton();
      window.dispatchEvent(new Event("cartUpdated"));
    }

    function updateCheckoutButton() {
      const btn = document.getElementById("checkout-go");
      if (!btn) return;
      const total = cart.reduce((s, i) => s + i.qty, 0);
      btn.textContent = total > 0 ? `Zur Kasse (${total})` : "Zur Kasse";
      btn.disabled = total === 0;
    }

    function renderCart() {
      const list = document.getElementById("order-items");
      const totalEl = document.getElementById("order-total");
      if (!list || !totalEl) return;
      list.innerHTML = "";
      let sum = 0;
      cart.forEach((item, i) => {
        sum += item.price * item.qty;
        const li = document.createElement("li");
        li.className = "cart-item";
        li.innerHTML = `
          <div class="cart-item-main">
            <span class="cart-item-name">${item.qty}x ${item.name}</span>
            <span class="cart-item-price">${(item.price * item.qty).toFixed(2)} €</span>
          </div>
          <button type="button" class="remove-item" data-index="${i}">Entfernen</button>
        `;
        list.appendChild(li);
      });
      totalEl.textContent = sum.toFixed(2) + " €";

      list.querySelectorAll(".remove-item").forEach(btn => {
        btn.onclick = () => {
          const idx = Number(btn.dataset.index);
          if (cart[idx].qty > 1) cart[idx].qty--;
          else cart.splice(idx, 1);
          saveCart();
        };
      });
    }

    document.querySelectorAll(".add-to-cart").forEach(btn => {
      btn.onclick = () => {
        const id = btn.dataset.id;
        const name = btn.dataset.name || "Unbekannt";
        const price = Number(btn.dataset.price || 0);
        const area = btn.dataset.area || "kitchen";

        const existing = cart.find(x => x.id === id && x.area === area);
        if (existing) existing.qty++;
        else cart.push({ id, name, price, qty: 1, area });

        saveCart();
      };
    });

    document.getElementById("checkout-go")?.addEventListener("click", () => {
      saveCart();
      window.location.href = "/checkout";
    });

    loadCart();

    // NÚT XÓA TOÀN BỘ GIỎ HÀNG
document.getElementById("clear-cart")?.addEventListener("click", () => {
  if (cart.length === 0) {
    alert("Giỏ hàng đã trống!");
    return;
  }
  if (confirm("Möchten Sie den gesamten Warenkorb wirklich löschen?")) {
    cart = [];
    saveCart();
    alert("Der Warenkorb wurde vollständig geleert!");
  }
});

  const HEADER_OFFSET = 120; // chỉnh số này cho khớp chiều cao header (80–140 thử dần)
  window.addEventListener("DOMContentLoaded", () => {
    const pills = document.querySelectorAll(".pill");

    pills.forEach((pill) => {
      pill.addEventListener("click", (e) => {
        e.preventDefault();
        const selector = pill.dataset.scrollTarget;
        if (!selector) return;

        const target = document.querySelector(selector);
        if (!target) return;

        // Tính tọa độ tuyệt đối rồi trừ offset header
        const rect = target.getBoundingClientRect();
        const targetY = rect.top + window.pageYOffset - HEADER_OFFSET;

        window.scrollTo({
          top: targetY,
          behavior: "smooth",
        });

        // cập nhật nút active
        pills.forEach((p) => p.classList.remove("active"));
        pill.classList.add("active");
      });
    });
  });

  </script>
 

