import Layout from "../layouts/Layout.astro";
import { fetchMenuItems } from "../lib/menuService";

type Gericht = {
  id: number;
  name: string;
  beschreibung?: string;
  preis: number;
  kategorie: string;
  bildUrl?: string;
};

const rohGerichte = await fetchMenuItems();
const gerichte: Gericht[] = rohGerichte.map((p) => ({
  id: p.id,
  name: p.name,
  beschreibung: p.description,
  preis: p.price,
  kategorie: p.category,
  bildUrl: p.imageUrl,
}));

const norm = (cat?: string) => (cat || "").toLowerCase().trim();

const vorspeisen = gerichte.filter((g) => norm(g.kategorie).startsWith("vorspeis"));
const hauptgerichte = gerichte.filter((g) => norm(g.kategorie).startsWith("hauptgericht"));
const desserts = gerichte.filter((g) => 
  norm(g.kategorie).includes("dessert") || 
  norm(g.kategorie).includes("nachspeis")
);
const getraenke = gerichte.filter((g) => 
  norm(g.kategorie).includes("getränk") || 
  norm(g.kategorie).includes("getraenk") || 
  norm(g.kategorie) === "bar"
);

const formatPreis = (preis?: number) => typeof preis === "number" ? preis.toFixed(2) + " €" : "";
