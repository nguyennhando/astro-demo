---
import Layout from "../layouts/Layout.astro";

// Danh s√°ch ·∫£nh menu (1 ‚Üí 22)
const menuImages = Array.from({ length: 22 }, (_, i) => `/assets/img/menu/${i + 1}.jpg`);
---

<Layout title="Menu ‚Äì GEM Sushi & Asian Fusion">
  <main class="menu-page">

    <!-- MENU IMAGE LIST -->
    <section class="menu-section">
      <div class="menu-container">
        {menuImages.map((src) => (
          <div class="menu-image-wrapper">
            <a href={src} target="_blank" rel="noopener noreferrer">
              <img
                src={src}
                alt="GEM Restaurant Men√º"
                class="menu-image"
                loading="lazy"
              />
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- GOOGLE MAP -->
    <section class="menu-map">
      <div class="menu-map-header">
        <h2>Find Us on Google Maps</h2>
        <p>Diezer Str. 21, 65549 Limburg a.d. Lahn</p>
      </div>

      <div class="menu-map-frame">
        <iframe
          src="https://maps.google.com/maps?width=100%25&height=600&hl=de&q=Diezer%20Str.21,%2065549%20Limburg%20a.d.%20Lahn+(GEM%20Restaurant)&t=&z=17&ie=UTF8&iwloc=B&output=embed"
          width="100%"
          height="600"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
    </section>

  </main>

  <style>
    .menu-page {
      padding-top: 2.5rem;
      padding-bottom: 3rem;
    }

    .menu-section {
      padding-top: 1.5rem;
      padding-bottom: 2.5rem;
    }

    .menu-container {
      max-width: 900px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      gap: 1.75rem;
    }

    .menu-image-wrapper {
  display: flex;
  justify-content: center;
  padding: 0 1rem;
}


    .menu-image-wrapper a {
      display: block;
      border-radius: 18px;
      overflow: hidden;
      border: 1px solid rgba(148, 163, 184, 0.25);
      box-shadow: 0 18px 45px rgba(0, 0, 0, 0.65);
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .menu-image-wrapper a:hover {
      transform: translateY(-4px);
      box-shadow: 0 26px 70px rgba(0, 0, 0, 0.9);
    }

    .menu-image {
     display: block;
     max-width: 720px;   /* üëà thu nh·ªè ·∫£nh */
     width: 100%;
    height: auto;
    }


    /* MAP */
    .menu-map {
      max-width: 1100px;
      margin: 3rem auto 0;
    }

    .menu-map-header {
      text-align: center;
      margin-bottom: 1rem;
    }

    .menu-map-header h2 {
      font-size: 1.45rem;
      font-weight: 600;
      color: #f8fafc;
      margin-bottom: 0.25rem;
    }

    .menu-map-header p {
      font-size: 0.9rem;
      color: #cbd5e1;
    }

    .menu-map-frame {
      border-radius: 18px;
      overflow: hidden;
      border: 1px solid rgba(148, 163, 184, 0.25);
      box-shadow: 0 18px 45px rgba(0, 0, 0, 0.65);
    }

    @media (max-width: 768px) {
      .menu-container {
        padding-inline: 0.5rem;
        gap: 1.25rem;
      }

      .menu-page {
        padding-top: 1.5rem;
      }
    }
  </style>
</Layout>
